{
  "name": "winget-gui",
  "author": "https://github.com/zhongmingshen",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "dev:vite": "vite",
    "build:main": "node ./node_modules/esbuild/bin/esbuild src/main/main.ts --bundle --platform=node --target=es2020 --external:electron --outfile=dist/main/index.js",
    "build:preload": "pnpm exec esbuild src/main/preload.ts --bundle --platform=node --target=es2020 --external:electron --outfile=dist/main/preload.js",
    "dev:electron": "pnpm run build:main && pnpm run build:preload && wait-on tcp:5173 && electron .",
    "dev": "pnpm run build:main && pnpm run build:preload && concurrently \"pnpm run dev:vite\" \"pnpm run dev:electron\"",
    "build": "vite build",
    "start": "electron .",
    "dist": "pnpm run build && pnpm run build:main && pnpm run build:preload && node ./scripts/dist-outside.js",
    "check": "node ./scripts/check.js",
    "typecheck": "vue-tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.2.5",
    "concurrently": "^8.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "esbuild": "^0.27.0",
    "png-to-ico": "^3.0.1",
    "sass": "^1.70.0",
    "sharp": "^0.34.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.5.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.1.0",
    "ant-design-vue": "^3.2.20",
    "vue": "^3.3.0",
    "vue-i18n": "^9.8.0"
  },
  "build": {
    "appId": "com.example.wingetgui",
    "productName": "Winget GUI",
    "files": [
      "dist/**/*",
      "src/main/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
